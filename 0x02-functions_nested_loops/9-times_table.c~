#include "main.h"

/**
 * times_table - 9 times table
 *
 */

void times_table(void)
{
	int i, j, s;

	for (i = 0; i <= 9; i++)
	{
		for (j = 0; j <= 9; j++)
		{
			s = i * j;
			_putchar(s + '0');
			if (s >= 10 )
			{
				long y = s/10;
				_putchar(y + '0');
				_putchar(s%10 + '0');
			}

			if (j < 9)
			{
				_putchar(',');
				_putchar(' ');
			}
		}
		_putchar('\n');
	}
}
